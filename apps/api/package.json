{
	"name": "ft-transcendence-api",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"dev": "tsx watch src/app.ts",
		"start": "node dist/app.js",
		"migrate:up": "tsx src/infra/db/migrate.ts up",
		"twofa:maintenance": "tsx src/auth/twofa/maintenance.ts",
		"docs:generate": "scalar document bundle ../../specs/001-specify-scripts-bash/contracts/openapi.yaml --output ../../openapi/openapi.yaml",
		"lint": "eslint \"src/**/*.{ts,tsx}\"",
		"format": "prettier --check \"src/**/*.{ts,tsx}\"",
		"dev:detached": "nohup npm run dev -- --port 3001 > /tmp/api-dev.log 2>&1 & echo $! > /tmp/api-dev.pid",
		"dev:stop": "kill $(cat /tmp/api-dev.pid) || true",
		"test:smoke": "node ./tests/run-smoke.mjs"
	},
	"dependencies": {
		"@fastify/cors": "^8.4.2",
		"@fastify/helmet": "^11.1.1",
		"@fastify/jwt": "^8.0.1",
		"@fastify/rate-limit": "^7.6.0",
		"@fastify/sensible": "^5.0.0",
		"@fastify/websocket": "^8.3.1",
		"@scalar/fastify-api-reference": "^1.38.1",
		"argon2": "^0.44.0",
		"better-sqlite3": "^9.4.4",
		"dotenv": "^16.4.5",
		"fastify": "^4.29.1",
		"fastify-plugin": "^4.5.1",
		"fastify-type-provider-zod": "^1.2.0",
		"otplib": "^12.0.1",
		"pino": "^8.19.0",
		"pino-pretty": "^10.2.0",
		"qrcode": "^1.5.3",
		"uuid": "^9.0.1",
		"ws": "^8.18.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@scalar/cli": "^1.1.5",
		"@types/better-sqlite3": "^7.6.6",
		"@types/node": "^20.10.6",
		"@types/qrcode": "^1.5.5",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"prettier": "^3.1.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	}
}
