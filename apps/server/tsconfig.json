{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"types": ["node"],
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["./*"],
			"@auth/*": ["./auth/*"],
			"@chat/*": ["./chat/*"],
			"@matches/*": ["./matches/*"],
			"@tournament/*": ["./tournament/*"],
			"@stats/*": ["./stats/*"],
			"@users/*": ["./users/*"],
			"@infra/*": ["./infra/*"],
			"@plugins/*": ["./plugins/*"],
			"@config/*": ["./infra/config/*"],
			"@db/*": ["./infra/db/*"],
			"@security/*": ["./infra/security/*"],
			"@observability/*": ["./infra/observability/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
